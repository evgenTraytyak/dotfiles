syntax on


" Colorscheme
"--------------------------------------------------

let g:onedark_termcolors=16
let g:onedark_terminal_italics=1

" OneDark colorscheme https://github.com/joshdick/onedark.vim
colorscheme onedark

highlight ColorColumn ctermbg=lightGrey
